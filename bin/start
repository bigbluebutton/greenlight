#!/bin/bash

if [ "$RAILS_ENV" = "production" ] && [ "$DB_ADAPTER" = "postgresql" ]; then
  while ! curl http://$DB_HOST:${DB_PORT:-5432}/ 2>&1 | grep '52'
  do
    echo "Waiting for postgres to start up ..."
    sleep 1
  done
fi

db_version="$(RAILS_ENV=$RAILS_ENV bundle exec rake db:version 2>&1)"
echo $db_version

if [ -z "$DB_SKIP_CREATION" ] || [ "$DB_SKIP_CREATION" == false ]; then
  db_create="$(RAILS_ENV=$RAILS_ENV bundle exec rake db:create 2>&1)"
  echo $db_create
fi

if [[ "$db_version" != "Current version: 0" ]] || [[ $db_create == *"already exists"* ]]; then
  echo ">>> Database migration"
  bundle exec rake db:migrate
else
  echo ">>> Database initialization"
  bundle exec rake db:schema:load
fi

bundle exec rake assets:precompile

exec bundle exec puma -C config/puma.rb
