<div class="modal fade" id="renameRoomModal_<%= room.uid %>" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
        <div class="card-body p-6">
          <div class="card-title">
            <h3><%= t("rename") %></h3>
          </div>

          <%= form_for(:room, url: update_room_path, method: :patch) do |f| %>
            <%= hidden_field_tag :setting, "rename" %>
            <div class="input-icon">
              <span class="input-icon-addon">
                <i class="fas fa-chalkboard-teacher"></i>
              </span>
              <%= f.text_field :name, id: "room-name", class: "form-control", value: "", placeholder: t("modal.rename_room.name_placeholder"), autocomplete: :off %>
            </div>
            <div class="form-footer">
                <%= f.submit "Rename", id: "rename-room-submit", class: "btn btn-outline-primary btn-block btn-pill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Handle validation messages client-side because
// form is served in modal, and they are minimal.
var roomRenameyValidations = function(){
  if($('#room-name').val().length == 0){
    $('#room-name').addClass("is-invalid");
  }
}

$('#rename-room-submit').on('click', roomRenameValidations);
</script>
