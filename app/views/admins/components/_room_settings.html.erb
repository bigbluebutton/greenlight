              <%= t("administrator.room_configuration.options.disabled") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-6 row">
    <div class="col-12">
     <div class="form-group">
        <label class="form-label"><%= t("modal.room_settings.start") %></label>
