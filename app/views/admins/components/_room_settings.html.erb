  <% if recording_consent_required? %>
    <div class="mb-6 row">
      <div class="col-12">
      <div class="form-group">
          <label class="form-label"><%= t("modal.room_settings.recording") %></label>
          <label class="form-label text-muted"><%= t("administrator.room_configuration.recordings.info") %></label>
