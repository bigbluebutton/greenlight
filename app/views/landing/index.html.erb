<% content_for :title do %>
  <div class="title">
    <h2>Aquada - IDMANN Conferencing Facility</h2>
  </div>
<% end %>

<div class="page-wrapper meetings">
  <div class="container-fluid">

    <div class="center-panel-wrapper">
      <%= render layout: 'shared/center_panel' do %>
        <div class="center-block center-panel-content-size col-xs-12">
          <%= render 'shared/meeting_name_form' %>

          <div class="row">
            <%= render 'landing/previously_joined' %>
          </div>

          <div class="row">
            <%= render 'landing/invite_join' %>
          </div>

        </div>
      <% end %>
    </div>

    <% if omniauth_providers_configured.present? %>
      <div class="center-block col-xs-6 login">
        <%= render 'shared/signup' %>
      </div>
    <% end %>

    <div class="text-center" style="padding-top:20px;">
      <p>Aquada Web Site ----&gt Click <a href="https://www.aquada.com">here</a>.</p>
	  <p>IDMANN Institute Web Site ----&gt Click <a href="https://www.idmanninstitute.com">here</a>.</p>
	  <p>Aquada Sales Web Site ----&gt Click <a href="https://www.aquadadirect.com">here</a>.</p>
	  <p>IDMANN Institute Store ----&gt Click <a href="https://www.idmannstore.com">here</a>.</p>
	  <p>Need Help?  support@aquada.com  support@idmanninstitute.com </p>
    </div>

  </div>
</div>
